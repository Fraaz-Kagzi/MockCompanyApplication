<%= form_with(model: incident, class: "contents") do |form| %>
  <% if incident.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul class="list-disc ml-6">
        <% incident.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :reported_by_id, "Reported by" %>
    <%= form.collection_select :reported_by_id, User.order(:name), :id, :name,
      {}, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
      {"border-gray-400 focus:outline-blue-600": incident.errors[:reported_by_id].none?,
       "border-red-400 focus:outline-red-600": incident.errors[:reported_by_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :job_id, "Related job (optional)" %>
    <%= form.collection_select :job_id, Job.order(:title), :id, :title,
      { include_blank: true }, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
      {"border-gray-400 focus:outline-blue-600": incident.errors[:job_id].none?,
       "border-red-400 focus:outline-red-600": incident.errors[:job_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :occurred_on, "Date of incident" %>
    <%= form.date_field :occurred_on, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
      {"border-gray-400 focus:outline-blue-600": incident.errors[:occurred_on].none?,"border-red-400 focus:outline-red-600": incident.errors[:occurred_on].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :location %>
    <%= form.text_field :location, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
      {"border-gray-400 focus:outline-blue-600": incident.errors[:location].none?,"border-red-400 focus:outline-red-600": incident.errors[:location].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
      {"border-gray-400 focus:outline-blue-600": incident.errors[:description].none?,"border-red-400 focus:outline-red-600": incident.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :severity %>
    <%= form.select :severity,
      Incident.severities.keys.map { |k| [k.titleize, k] },
      {}, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
      {"border-gray-400 focus:outline-blue-600": incident.errors[:severity].none?,"border-red-400 focus:outline-red-600": incident.errors[:severity].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.select :status,
      Incident.statuses.keys.map { |k| [k.titleize, k] },
      {}, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
      {"border-gray-400 focus:outline-blue-600": incident.errors[:status].none?,"border-red-400 focus:outline-red-600": incident.errors[:status].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
