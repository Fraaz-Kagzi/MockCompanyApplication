<div id="<%= dom_id incident %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Reported by:</strong>
    <%= incident.reported_by_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Job:</strong>
    <%= incident.job_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Occurred on:</strong>
    <%= incident.occurred_on %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Location:</strong>
    <%= incident.location %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= incident.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Severity:</strong>
    <%= incident.severity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= incident.status %>
  </div>
</div>
