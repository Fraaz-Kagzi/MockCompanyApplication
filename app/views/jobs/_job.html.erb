<div id="<%= dom_id job %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= job.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= job.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= job.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Scheduled for:</strong>
    <%= job.scheduled_for %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Assigned to:</strong>
    <%= job.assigned_user&.name || "Unassigned" %>
  </div>

</div>
