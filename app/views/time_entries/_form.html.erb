<%= form_with(model: [timesheet, time_entry]) do |form| %>
  <% if time_entry.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(time_entry.errors.count, "error") %> prohibited this time_entry from being saved:</h2>

      <ul class="list-disc ml-6">
        <% time_entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :timesheet_id %>
    <%= form.text_field :timesheet_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": time_entry.errors[:timesheet_id].none?, "border-red-400 focus:outline-red-600": time_entry.errors[:timesheet_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :job_id %>
    <%= form.text_field :job_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": time_entry.errors[:job_id].none?, "border-red-400 focus:outline-red-600": time_entry.errors[:job_id].any?}] %>
  </div>

  <div>
    <%= form.label :job_id, "Job" %>
    <%= form.collection_select :job_id, Job.order(:title), :id, :title, include_blank: true %>
  </div>

  <div class="my-5">
    <%= form.label :work_date %>
    <%= form.date_field :work_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": time_entry.errors[:work_date].none?, "border-red-400 focus:outline-red-600": time_entry.errors[:work_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :hours %>
    <%= form.text_field :hours, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": time_entry.errors[:hours].none?, "border-red-400 focus:outline-red-600": time_entry.errors[:hours].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": time_entry.errors[:notes].none?, "border-red-400 focus:outline-red-600": time_entry.errors[:notes].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
